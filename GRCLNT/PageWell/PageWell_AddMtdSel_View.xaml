<UserControl x:Class="GRCLNT.PageWell_AddMtdSel_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GRCLNT"
             mc:Ignorable="d" 
             xmlns:s="https://github.com/canton7/Stylet"
             d:DataContext="{d:DesignInstance local:PageWellViewModel}" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Command="{s:Action SelectPageCmd}" CommandParameter="Well_AddManual" Style="{StaticResource MaterialDesignRaisedButton}" Width="200" Height="240" materialDesign:ButtonAssist.CornerRadius="10"
                    Margin="40" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/GRCLNT;component/Resource/Image/BtnCard_EntWellAddHand.png"/>
                </Button.Background>
                <TextBlock Text="手动录入" FontSize="24" Margin="0,200,0,0"/>
            </Button>
            <Button Command="{s:Action SelectPageCmd}" CommandParameter="Well_AddAuto" Style="{StaticResource MaterialDesignRaisedButton}" Width="200" Height="240" materialDesign:ButtonAssist.CornerRadius="10"
                    Margin="40" BorderThickness="0">
                <Button.Background>
                    <ImageBrush ImageSource="/GRCLNT;component/Resource/Image/BtnCard_EntWellAddAuto.png"/>
                </Button.Background>
                <TextBlock Text="自动导入" FontSize="24" Margin="0,200,0,0"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
